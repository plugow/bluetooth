<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.bluetooth"
    >
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:label="PantographApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="BlueActivity"
            android:label="Paired Devices">
        </activity>

        <activity android:name=".AboutActivity"
            android:label="About">
        </activity>

        <activity android:name="JogActivity"
            android:label="Jog Operations"
            android:screenOrientation="landscape" android:configChanges="keyboardHidden|orientation">

        </activity>
    </application>

</manifest>